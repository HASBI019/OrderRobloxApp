<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#D9121212"
    app:cardCornerRadius="12dp"
    app:strokeColor="#00E5FF"
    app:strokeWidth="2dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/layHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/layButtons">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Player"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antri"
                android:textColor="#000000"
                android:background="#FF9100"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layHeader"
            android:layout_marginTop="4dp"
            android:layout_toStartOf="@id/layButtons"
            android:text="Map: Blox Fruit"
            android:textColor="#AAAAAA"
            android:textSize="14sp"/>

        <View
            android:id="@+id/lineSep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tvMap"
            android:background="#333333"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineSep"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="#666666"/>

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/layHeader"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="#2196F3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="#F44336"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"/>
        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>